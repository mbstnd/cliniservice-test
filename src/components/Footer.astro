---
import LocationIcon from "../icons/Location.astro"
import TimeIcon from "../icons/Time.astro"
---

<footer class="bg-[#CCDCDA] dark:bg-gray-800 py-[5vh]">
  <div class="container mx-auto px-4">
    <!-- Divider -->
    <div
      class="w-full h-px bg-gradient-to-r from-transparent via-blue-950/20 dark:via-white/20 to-transparent mb-[3vh]"
    >
    </div>

    <!-- Footer Bottom -->
    <div class="text-center">
      <p
        class="text-gray-700 dark:text-gray-400 text-sm md:text-base leading-relaxed"
      >
        © {new Date().getFullYear()}
        <span class="font-bold text-blue-950 dark:text-white">CliniService</span
        > — Todos los derechos reservados
      </p>
    </div>
  </div>
</footer>
