import HeaderButton from "./HeaderButton.astro"
---

<header class="bg-[#CCDCDA] w-full shadow-md fixed top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="inline-block" aria-label="Cliniservice Logo">
          <img
            class="w-40 md:w-52"
            src="/img/logo-clini-service.png"
            alt="Cliniservice Logo"
            width="208"
            height="60"
          />
        </a>
      </div>

      <!-- NavegaciÃ³n -->
      <div class="hidden md:flex items-center space-x-6">
        <a
          href="https://www.cliniservice.cl/"
